Listen {{ keep_ka_lite_central_port }}

<VirtualHost *:{{ keep_ka_lite_central_port }}>

    ServerName kalite.learningequality.org

    Alias /static {{ ka_lite_central_path }}/centralserver/static
    Alias /media/locations {{ ka_lite_central_path }}/centralserver/media/locations
    Alias /favicon.ico {{ ka_lite_central_path }}/centralserver/static/central/images/favicon.ico

    <Directory {{ ka_lite_central_path }}/centralserver>
        Order deny,allow
        Allow from all
    </Directory>

    WSGIScriptAlias / {{ ka_lite_central_path }}/centralserver/central.wsgi

</VirtualHost>
